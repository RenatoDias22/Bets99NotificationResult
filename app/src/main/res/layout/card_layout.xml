<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:id="@+id/card_view"
    android:layout_margin="12dp"
    card_view:cardBackgroundColor="#f2f2f2"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="5dp"
    card_view:contentPadding="4dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/item_image_borda"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/frame"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/item_time_casa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@+id/item_x"
            android:gravity="end"
            android:ellipsize="end"
            android:paddingTop="4dp"
            android:text="Palmeiras"
            android:textColor="#c1903c"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:paddingTop="4dp"
            android:text=" X "
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_time_Fora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/item_x"
            android:gravity="start"
            android:ellipsize="end"
            android:paddingTop="4dp"
            android:textColor="#c1903c"
            android:text="Corinthians"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/id_matche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_time_casa"
            android:maxLines="1"
            android:layout_marginTop="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="(123456)"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/data_jogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_x"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:layout_marginTop="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="21/08/2017 21:00"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>